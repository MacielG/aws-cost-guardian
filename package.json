{
  "name": "aws-cost-guardian-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "infra"
  ],
  "scripts": {
  "install:all": "npm ci --workspaces",
  "dev": "concurrently --kill-others-on-fail --names \"FRONT,BACK\" \"npm:dev --workspace=frontend\" \"npm:dev --workspace=backend\"",
  "validate": "powershell.exe -NoProfile -ExecutionPolicy Bypass -File ./validate-setup.ps1",
  "deploy": "npm run validate && npm run deploy --workspace=infra",
  "test": "npm test --workspaces",
  "test:coverage": "npm run test -- --coverage --coverageDirectory=./coverage --collectCoverageFrom='backend/**/*.js' --collectCoverageFrom='frontend/**/*.{ts,tsx}' --collectCoverageFrom='infra/**/*.ts'",
    "test:integration": "npm run test -- --testPathPattern=integration",
    "test:smoke": "node scripts/health-monitor.js",
    "test:production": "node scripts/validate-production.js && npm run load-test",
    "setup:dev": "node scripts/setup-environment.js development all",
    "setup:staging": "node scripts/setup-environment.js staging all",
    "setup:prod": "node scripts/setup-environment.js production all",
    "load-test": "cd backend && npm run load-test",
    "health-check": "cd backend && npm run health-check",
    "validate-production": "node scripts/validate-production.js",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix"
  },
  "devDependencies": {
  "@babel/preset-env": "^7.28.5",
  "@swc/helpers": "^0.5.2",
  "concurrently": "^8.2.2",
  "husky": "^8.0.0",
  "lint-staged": "^13.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "overrides": {
    "react": "^18",
    "react-dom": "^18"
  }
}
